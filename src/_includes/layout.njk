<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <nav>
            <div class="logo">EEB Naturupplevelser</div>
            <ul class="desktop-nav">
                <li><a href="/">Hem</a></li>
                <li><a href="/#e-foil">E-foil</a></li>
                <li><a href="/#wing-foil">Wing foil</a></li>
                <li><a href="/#kajak">Kajak</a></li>
            </ul>
            <button class="hamburger-menu" aria-label="Open navigation menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </nav>
    </header>

    <div class="mobile-nav">
        <a href="/">Hem</a>
        <a href="/#e-foil">E-foil</a>
        <a href="/#wing-foil">Wing foil</a>
        <a href="/#kajak">Kajak</a>
    </div>

    <main>
        {{ content | safe }}
    </main>

    <footer>
        <p>EEB Naturupplevelser</p>
        <p>Kontakt: 070 349 1509 | 070 349 6331 </p>
    </footer>

    <script>
        const hamburger = document.querySelector('.hamburger-menu');
        const mobileNav = document.querySelector('.mobile-nav');

        hamburger.addEventListener('click', () => {
            hamburger.classList.toggle('active');
            mobileNav.classList.toggle('active');
        });

        // Close menu when a link is clicked
        document.querySelectorAll('.mobile-nav a').forEach(link => {
            link.addEventListener('click', () => {
                hamburger.classList.remove('active');
                mobileNav.classList.remove('active');
            });
        });
    </script>
</body>
</html> 
